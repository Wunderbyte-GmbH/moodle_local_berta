{{!
    @template local_berta/card

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region
}}

<div class="card {{{headerbgcolor}}} text-dark">
    {{#title}}
    <div class="card-header">
        <div class="card-title h4 font-weight-bold">{{{.}}}</div>
    </div>
    {{/title}}
    {{#content}}
    <div class="card-body">
        <div class="card-text">{{{.}}}</div>
    </div>
    {{/content}}
    {{#footer}}
    <div class="card-footer">
        <small class="text-dark">{{{.}}}</small>
    </div>
    {{/footer}}
</div>
{{!
    @template local_berta/card_content

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region
}}

{{#item}}
    {{#link}}
        <a href="{{.}}" class="text-primary">
    {{/link}}
    {{#data-action}}
    <div class="{{key}}" data-action="{{.}}">
    {{/data-action}}
    {{^data-action}}
    <div class="{{key}}">
    {{/data-action}}
        {{#key}}
            <span class="key">
                {{^html}}
                    {{#link}}&#10148; {{{key}}}{{/link}}
                    {{^link}}{{key}}:{{/link}}
                {{/html}}
                {{#html}}{{{html}}}{{/html}}
            </span>
        {{/key}}
        {{#value}}
            <span class="value">
                <strong>{{{value}}}</strong>
            </span>
        {{/value}}
        {{^value}}{{^link}}{{^html}}
            <span class="value">
                <strong>0</strong>
            </span>
        {{/html}}{{/link}}{{/value}}
    </div>
    {{#link}}
        </a>
    {{/link}}
{{/item}}